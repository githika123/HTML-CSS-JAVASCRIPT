<script>
const hospitals = [
  { name: "Apollo Hospitals", city: "Chennai" },
  { name: "Fortis Healthcare", city: "Delhi" },
  { name: "AIIMS", city: "Delhi" },
  { name: "Kauvery Hospital", city: "Bangalore" },
  { name: "Global Hospitals", city: "Hyderabad" },
  { name: "Manipal Hospitals", city: "Bangalore" },
  { name: "Narayana Health", city: "Mumbai" },
  { name: "Rainbow Children's Hospital", city: "Hyderabad" },
  { name: "Aster Medcity", city: "Kochi" },
  { name: "Care Hospitals", city: "Pune" },
  { name: "Yashoda Hospitals", city: "Hyderabad" },
  { name: "Cloudnine Hospital", city: "Chennai" },
  { name: "Columbia Asia", city: "Delhi" },
  { name: "Max Super Specialty", city: "Delhi" },
  { name: "Cauvery Heart Center", city: "Bangalore" },
  { name: "Vellore Medical Center", city: "Vellore" },
  { name: "Apollo Vellore", city: "Vellore" },
  { name: "Government Hospital Vellore", city: "Vellore" },
  { name: "Sri Narayani Hospital", city: "Vellore" },
  { name: "SRMC Vellore", city: "Vellore" },
  { name: "Best Care Hospital", city: "Vellore" },
  { name: "City Hospital", city: "Vellore" },
  { name: "Fortis Vellore", city: "Vellore" },
  { name: "Healing Hands Hospital", city: "Vellore" },
  { name: "Grace Hospital", city: "Vellore" },
  { name: "Sunshine Hospital", city: "Vellore" },
  { name: "Medicare Vellore", city: "Vellore" },
  { name: "Healthway Vellore", city: "Vellore" },
  { name: "CarePlus Hospital", city: "Vellore" },
  { name: "LifeLine Hospital", city: "Vellore" }
];

const specializations = ["Cardiology","Neurology","Orthopedics","Gynecology","Pediatrics","Dermatology"];

const doctors = {
  Cardiology:["Dr. Ramesh Rao","Dr. Neha Pillai"],
  Neurology:["Dr. Kiran Patil","Dr. Ayesha Khan"],
  Orthopedics:["Dr. Suresh Menon","Dr. Deepa Sharma"],
  Gynecology:["Dr. Meena Iyer","Dr. Pooja Nair"],
  Pediatrics:["Dr. Rajesh Jain","Dr. Nivedita Ghosh"],
  Dermatology:["Dr. Harini Babu","Dr. Vikram Tiwari"]
};

const hospitalGrid = document.getElementById("hospitalGrid");

function renderHospitals(hospList) {
  hospitalGrid.innerHTML = "";
  hospList.forEach(hosp => {
    const card = document.createElement("div");
    card.className = "hospital-card";
    card.innerHTML = `
      <img src="https://source.unsplash.com/400x300/?hospital,${hosp.name}" alt="${hosp.name}">
      <div class="info">
        <h3>${hosp.name}</h3>
        <p>${hosp.city}</p>
      </div>`;
    card.onclick = () => openSpecialization(hosp.name);
    hospitalGrid.appendChild(card);
  });
}

function filterHospitals() {
  const query = document.getElementById("searchHospital").value.toLowerCase();
  const filtered = hospitals.filter(h => h.name.toLowerCase().includes(query) || h.city.toLowerCase().includes(query));
  renderHospitals(filtered);
}

// Specialization modal
function openSpecialization(hospitalName) {
  document.getElementById("specializationModal").style.display = "flex";
  const container = document.getElementById("specializations");
  container.innerHTML = "";
  specializations.forEach(spec => {
    const btn = document.createElement("button");
    btn.textContent = spec;
    btn.onclick = () => showDoctors(hospitalName, spec);
    container.appendChild(btn);
  });
}

function showDoctors(hospital, specialization) {
  closeModal("specializationModal");
  const list = document.getElementById("doctorList");
  list.innerHTML = `<h2>${specialization} Specialists at ${hospital}</h2>`;
  doctors[specialization].forEach(doc => {
    const card = document.createElement("div");
    card.className = "doctor-card";
    card.innerHTML = `
      <img src="https://source.unsplash.com/400x300/?doctor,portrait" alt="${doc}">
      <h4>${doc}</h4>
      <p>${specialization}</p>
      <button class="book-btn" onclick="openDemoModal('${doc}')">Book Demo</button>`;
    list.appendChild(card);
  });
  list.style.display = "block";
  list.scrollIntoView({ behavior: "smooth" });
}

function openDemoModal(doc) {
  document.getElementById("demoModal").style.display = "flex";
}
function closeModal(id) { document.getElementById(id).style.display = "none"; }

document.getElementById("demoForm").addEventListener("submit", e => {
  e.preventDefault();
  alert("✅ Demo booked successfully! Our team will contact you soon.");
  closeModal("demoModal");
});

// Initial render
renderHospitals(hospitals);
</script>
